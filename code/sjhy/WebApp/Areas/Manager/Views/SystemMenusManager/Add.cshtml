@section Scripts{

        <script>

            $("#FirstSelect").click(function(){
                var v = $(this).val();
                console.log(v);
                if(v == 0){
                    $("#SecondSelect").hide();
                }else
                {
                     $("#SecondSelect").show();
                }
            })

            $("#chooseIcon>li").click(function(){
                
                var el =  $(this).children();
                $("#Icon").val($(el[1]).text());
            
            });


        </script>

