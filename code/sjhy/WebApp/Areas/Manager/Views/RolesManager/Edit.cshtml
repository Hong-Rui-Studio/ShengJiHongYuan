@model Entity.ViewModels.Roles.RolesEditViewModel
@{
    ViewBag.Title = "编辑身份信息";
}

<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">编辑身份信息</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <form asp-action="Edit" asp-controller="RolesManager" asp-area="Manager"  method="post">
                    <div class="form-group">
                        <label for="">身份编号</label>
                        <input asp-for="RolesId" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="">身份名称</label>
                        <input asp-for="RolesTitle" class="form-control" />
                        <span asp-validation-for="RolesTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>   