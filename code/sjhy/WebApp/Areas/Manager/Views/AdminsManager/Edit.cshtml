@model Entity.ViewModels.Admins.AdminsEditViewModel
@{
    ViewBag.Title = "编辑管理员信息";
}
<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">编辑管理员信息</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <form asp-action="Add" asp-controller="AdminsManager" asp-area="Manager"  method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">编号</label>
                        <input asp-for="Id" class="form-control" readonly />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="">名称</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label for="">出生日期</label>
                        <input asp-for="BornDate" class="form-control" value="2022-08-10" />
                        <span asp-validation-for="BornDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="">性别</label>
                        @if (Model.Gender == 1)
                        {
                                <label class="fancy-radio">
                                <input name="Gender" value="1" type="radio" checked>
                                   <span><i></i>男</span>
                            </label>
                             <label class="fancy-radio">
                                <input name="Gender" value="2" type="radio">
                                <span><i></i>女</span>
                                </label>
                        }
                        else
                        {
                                <label class="fancy-radio">
                                <input name="Gender" value="1" type="radio">
                                   <span><i></i>男</span>
                            </label>
                             <label class="fancy-radio">
                                <input name="Gender" value="2" type="radio" checked>
                                <span><i></i>女</span>
                             </label>

                        }

                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="">邮件地址</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="">联系电话</label>
                        <input asp-for="Tel" class="form-control" />
                        <span asp-validation-for="Tel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="">上传头像</label>
                        <input type="file" name="imgUpload" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <img src="~/upload/admins/@Model.Photo" />


                    </div>
                    <div class="form-group">
                        <label for="">所属身份</label>
                        <select asp-for="RolesId" asp-items="ViewBag.RoleList" class="form-control">
                            <option>请选择</option>
                        </select>
                        <span asp-validation-for="RolesId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>  